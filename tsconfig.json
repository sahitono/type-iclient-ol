{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@types/geojson"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "files": [
    "index.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}